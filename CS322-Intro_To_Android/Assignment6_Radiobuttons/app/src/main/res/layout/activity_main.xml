<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        app:srcCompat="@drawable/topbun" />

    <RadioGroup
        android:id="@+id/pattyGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="24dp">

        <RadioButton
            android:id="@+id/radioBeefPatty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/beefLabel" />

        <RadioButton
            android:id="@+id/radioTurkeyPatty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/turkeyLabel" />

        <RadioButton
            android:id="@+id/radioVeggiePatty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/veggieLabel" />

    </RadioGroup>

    <CheckBox
        android:id="@+id/toggleButtonBacon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/baconLabel" />

    <RadioGroup
        android:id="@+id/cheeseGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <RadioButton
            android:id="@+id/radioNoCheese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/noCheeseLabel" />
        <RadioButton
            android:id="@+id/radioCheddar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cheddarLabel" />

        <RadioButton
            android:id="@+id/radioMozz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mozzLabel" />
    </RadioGroup>

    <TextView
        android:id="@+id/textViewSpecialSauce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/sauceLabel" />

    <SeekBar
        android:id="@+id/seekBarSauce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"/>

    <ImageView
        android:id="@+id/imageViewBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:srcCompat="@drawable/bottombun" />

    <TextView
        android:id="@+id/textViewCalories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/calorieLabel"
        android:textSize="24dp"/>
</LinearLayout>